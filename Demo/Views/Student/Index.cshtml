@model IEnumerable<Demo.Models.Student>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Student List</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="Student" asp-action="Create" class="btn btn-primary">
				<i class="fas fa-plus"></i> &nbsp; Register
			</a>
		</div>
	</div>

	<br /><br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>
						Student Name
					</th>
					<th>
						Age
					</th>
					<th>
						Department
					</th>
					<th class="text-center">
						Edit/Delete
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
				<tr>
					<td width="10%">@obj.Id</td>
					<td width="30%">@obj.Name</td>
					<td width="15%">@obj.Age</td>
					<td width="20%">@obj.Department</td>
					
					<td width="25%" class="text-center">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Student" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
								<i class="fas fa-edit"></i> Edit
							</a>
							<a asp-controller="Student" asp-route-Id="@obj.Id" asp-action="DeletePost" class="btn btn-danger mx-2">
								<i class="far fa-trash-alt"></i> Delete
							</a>
						</div>
					</td> 
				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p> No Student exists.</p>
	}

</div>


